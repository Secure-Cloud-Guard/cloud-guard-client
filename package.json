{
  "name": "cloud-guard-client",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "set-auth-url": "node ./src/assets/scripts/setUrl.js ./dist/auth/browser/index.html",
    "set-client-url": "node ./src/assets/scripts/setUrl.js ./dist/client/browser/index.html",
    "config-env": "ts-node ./src/assets/scripts/setEnv.ts",
    "start-auth": "npm run config-env -- --environment=dev && ng serve --port 4200 auth",
    "start-auth-prod": "npm run config-env -- --environment=prod && ng serve auth --configuration production",
    "build-auth": "npm run config-env -- --environment=prod && ng build --project=\"auth\" --configuration production && npm run set-auth-url",
    "start-client": "npm run config-env -- --environment=dev && ng serve --port 4300 client",
    "start-client-prod": "npm run config-env -- --environment=prod && ng serve client --configuration production",
    "build-client": "npm run config-env -- --environment=prod && ng build --project=\"client\" --configuration production && npm run set-client-url",
    "test": "ng test"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.0.3",
    "@angular/cdk": "^17.0.1",
    "@angular/common": "^17.0.3",
    "@angular/compiler": "^17.0.3",
    "@angular/core": "^17.0.3",
    "@angular/forms": "^17.0.3",
    "@angular/material": "^17.0.1",
    "@angular/platform-browser": "^17.0.3",
    "@angular/platform-browser-dynamic": "^17.0.3",
    "@angular/router": "^17.0.3",
    "angular-code-input": "^2.0.0",
    "aws-amplify": "^6.0.5",
    "cheerio": "^1.0.0-rc.12",
    "cross-domain-storage": "^2.0.7",
    "http-status-codes": "^2.3.0",
    "jszip": "^3.10.1",
    "ngx-filesize": "^3.0.3",
    "ngx-logger": "^5.0.12",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.0.1",
    "@angular/cli": "^17.0.1",
    "@angular/compiler-cli": "^17.0.3",
    "@types/jasmine": "~4.3.0",
    "autoprefixer": "^10.4.16",
    "dotenv": "^16.3.1",
    "jasmine-core": "~4.6.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "madge": "^6.1.0",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "ts-node": "^10.9.1",
    "typescript": "~5.2.2",
    "yargs": "^17.7.2"
  }
}
